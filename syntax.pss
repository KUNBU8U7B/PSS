11. NILAI NULL
----------------------------------------
a = null
if a == null;
    print "a is null"
else;
    print "a is not null"
----------------------------------------
12. PERCABANGAN
----------------------------------------
# if
if a > b;
    print "a lebih besar"
# if - else
if a < b;
    print "a lebih kecil"
else;
    print "a lebih besar atau sama"
# if - elif - else
if a > b;
    print "a > b"
elif a < b;
    print "a < b"
else;
    print "a == b"
----------------------------------------
13. SWITCH CASE
----------------------------------------
switch a;
    case 1;
        print "satu"
    case 2;
        print "dua"
    default;
        print "lainnya"
----------------------------------------
14. PERULANGAN
----------------------------------------
# for
for i in range(5);
    print i
# while
while a > 0;
    print a
    a--
# do while
do;
    print a
    a--
while a > 0
# foreach
foreach i in [1,2,3];
    print i
