mylist = [1,2,3]
mylist.add(4)
mylist.remove(2)
print mylist
print mylist.length
print mylist[0]
# Dictionary (key-value)
mydict = {"a":1, "b":2}
mydict.add("c", 3)
mydict.remove("a")
print mydict
# Set (unik)
myset = {1,2,3}
myset.add(4)
myset.remove(2)
print myset
# Tuple (tidak bisa diubah)
mytuple = (1,2,3)
