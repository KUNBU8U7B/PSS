25. DESTRUCTOR (OOP)
----------------------------------------
class Mobil;
    merk = ""
    func hapus();
        print "Mobil " + merk + " dihapus"
# membuat objek
mobil = Mobil()
mobil.merk = "Toyota"
# saat objek dihapus, destructor dipanggil
# di PSS, destructor dipanggil otomatis saat variabel keluar scope
# atau bisa juga dihapus manual
del mobil
----------------------------------------
26. INHERITANCE (PEWARISAN)
----------------------------------------
class Hewan;
    nama = ""
    func makan();
        print nama + " sedang makan"
class Kucing inherits Hewan;
    func mengeong();
        print nama + " mengeong"
kucing = Kucing()
kucing.nama = "Oyen"
kucing.makan()      # dari class Hewan
kucing.mengeong()   # dari class Kucing
